{
    "compilerOptions": {
        "target": "ES6",                        // Versão do JavaScript de saída
        "module": "commonjs",                   // Módulos comuns para Node.js
        "rootDir": "./src",                     // Diretório de entrada
        "outDir": "./dist",                     // Diretório de saída
        "strict": true,                          // Habilita checagem de tipos estritos
        "esModuleInterop": true,                 // Permite importações padrão de módulos ES
        "skipLibCheck": true                     // Ignora checagem de tipo nas definições de bibliotecas
    },
    "include": ["src/**/*"],                     // Inclui todos os arquivos TypeScript na pasta src
    "exclude": ["node_modules"]                  // Exclui a pasta node_modules
}